{% extends "base.html.twig"%}

{% block title %}  Voici mon blog Symfony | Inscription {% endblock %}

{% block body %}

<h1 class="display-4 text-center my-4">Créez votre compte</h1>

{# La variable TWIG form correspond à l'indice 'form' de SecurityController. #}

{# form_start  appelle la balise ouvrante du formulaire #}
{{ form_start(form, { 'attr' : { 'class' : 'col-md-6 mx-auto' }}) }}

    {# On insère chaque champ #}
    {{ form_row(form.username, { 'label': "Nom d'utilisateur" }) }}

    {{ form_row(form.email) }}

    {{ form_row(form.password, { 'label': "Mot de passe" }) }}

    {{ form_row(form.confirm_password, { 'label' : "Confirmez votre mot de passe" }) }}

    <button type="submit" class="btn btn-dark">Validez votre inscription</button>


{# form_start  appelle la balise ouvrante du formulaire #}
{{ form_end(form) }}


{% endblock %}